<div class="py-16 px-4">
  <div class="max-w-4xl font-merriweather mx-auto">
    <h2 class="text-3xl font-bold text-center mb-8">
      Plan Your Next Adventure
    </h2>
    <div class="flex flex-col md:flex-row justify-center items-center mb-8">
      <div class="flex-grow md:w-1/3 mb-4 md:mb-0 md:mr-4">
        <label for="check-in" class="block text-lg mb-2">Check-in Date</label>
        <input
          type="date"
          id="check-in"
          class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:border-pink-500"
        />
      </div>
      <div class="flex-grow md:w-1/3 mb-4 md:mb-0 md:mr-4">
        <label for="check-out" class="block text-lg mb-2">Check-out Date</label>
        <input
          type="date"
          id="check-out"
          class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:border-pink-500"
        />
      </div>
      <div class="flex-grow md:w-1/3 mb-4 md:mb-0 md:mr-4">
        <label for="destination" class="block text-lg mb-2">Destination</label>
        <input
          type="text"
          id="destination"
          class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:border-pink-500"
        />
      </div>
    </div>
    <div class="text-center">
      <button
        class="text-wrap font-poppins text-white bg-gradient-to-r from-pink-400 via-pink-500 to-pink-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-pink-300 dark:focus:ring-pink-800 shadow-lg shadow-pink-500/50 dark:shadow-lg dark:shadow-pink-800/80 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2"
        >Search</button
      >
    </div>
    <p class="text-center mt-4">
      Don't have a profile yet? <button
        data-modal-target="static-modal"
        data-modal-toggle="static-modal"
        type="button"
        class="text-pink-500 font-semibold">Create one now</button
      >
    </p>
  </div>

  <!-- Main modal -->
  <div
    id="static-modal"
    data-modal-backdrop="static"
    tabindex="-1"
    aria-hidden="true"
    class="fixed z-50 flex justify-center  shadow-lg items-center w-full inset-0 "
  >
    <div class="p-4 w-full md:w-2/5  overflow-y-visible h-full ">
      <!-- Modal content -->
      <div class="bg-white rounded-lg shadow dark:bg-gray-700">
        <!-- Modal header -->
        <div
          class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600"
        >
          <h3
            class="text-xl font-poppins font-semibold text-gray-900 dark:text-white"
          >
            Create a profile
          </h3>
          <button
            type="button"
            class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
            data-modal-hide="static-modal"
          >
            <svg
              class="w-3 h-3"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 14 14"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"></path>
            </svg>
            <span class="sr-only">Close modal</span>
          </button>
        </div>
        <!-- Modal body -->
        <div class="p-4 md:p-5 space-y-4">
          <!-- form -->
          <form>
            <div class="mb-4">
              <label
                class="block text-gray-700 text-sm font-bold mb-2"
                for="interests">Interests:</label
              >
              <input
                type="text"
                id="interests"
                name="interests"
                placeholder="e.g., Travel, Cooking, Photography"
                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:border-blue-500"
              />
            </div>
            <div class="mb-4">
              <label
                class="block text-gray-700 text-sm font-bold mb-2"
                for="hobbies">Hobbies:</label
              >
              <input
                type="text"
                id="hobbies"
                name="hobbies"
                placeholder="e.g., Reading, Painting, Hiking"
                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:border-blue-500"
              />
            </div>
            <div class="mb-4">
              <label
                class="block text-gray-700 text-sm font-bold mb-2"
                for="smoker">Smoker:</label
              >
              <select
                id="smoker"
                name="smoker"
                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:border-blue-500"
              >
                <option value="yes">Yes</option>
                <option value="no">No</option>
              </select>
            </div>
            <div class="mb-4">
              <label
                class="block text-gray-700 text-sm font-bold mb-2"
                for="age">Age:</label
              >
              <input
                type="number"
                id="age"
                name="age"
                placeholder="Enter your age"
                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:border-blue-500"
              />
            </div>
            <div class="mb-4">
              <label
                class="block text-gray-700 text-sm font-bold mb-2"
                for="story">Personal Story to Share:</label
              >
              <textarea
                id="story"
                name="story"
                rows="4"
                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:border-blue-500"
              ></textarea>
            </div>
          </form>
        </div>
        <!-- Modal footer -->
        <div
          class="flex items-center p-4 md:p-5 border-t border-gray-200 rounded-b dark:border-gray-600"
        >
          <button
            data-modal-hide="static-modal"
            type="button"
            class="text-wrap text-white bg-gradient-to-r from-pink-400 via-pink-500 to-pink-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-pink-300 dark:focus:ring-pink-800 shadow-lg shadow-pink-500/50 dark:shadow-lg dark:shadow-pink-800/80 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2"
            >Save</button
          >
          <button
            data-modal-hide="static-modal"
            type="button"
            class="py-2.5 px-5 ms-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-pink-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700"
            >Reset</button
          >
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const toggleButton = document.querySelector(
      '[data-modal-toggle="static-modal"]'
    );
    const modal = document.getElementById("static-modal");
    const closeButton = document.querySelector(
      '[data-modal-hide="static-modal"]'
    );

    if (toggleButton && modal && closeButton) {
      toggleButton.addEventListener("click", function () {
        modal.classList.toggle("hidden");
      });

      closeButton.addEventListener("click", function () {
        modal.classList.add("hidden");
      });
    }
  });
</script>
