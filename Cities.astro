---
import cities from "./cities.js";
---

<div class="py-16 px-4 font-poppins">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-3xl font-merriweather font-bold text-center mb-8">
      Popular Cities
    </h2>
    <div class="overflow-x-auto max-w-full">
      <div
        id="cityContainer"
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 overflow-y-auto"
      >
        {
          cities &&
            cities.map((city) => (
              <div class="cursor-pointer bg-white rounded-lg shadow-md overflow-hidden">
                <img
                  src={city.image}
                  alt={city.name}
                  class="w-full h-48 object-cover"
                />
                <div class="p-4 flex justify-center items-center space-x-2">
                  <h3 class="text-lg font-semibold">{city.name}</h3>
                </div>
              </div>
            ))
        }
      </div>
    </div>
  </div>
</div>
